{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "runtime/**/*.ts",
    "orchestrator/**/*.ts",
    "agents/**/*.ts",
    "tests/**/*.ts"
  ]
}
