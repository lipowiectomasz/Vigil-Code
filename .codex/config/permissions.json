{
  "agents": {
    "vg-test-automation": {
      "shell": {
        "allowed": [
          "npx vitest run",
          "npm run test*"
        ],
        "workingDirectories": [
          "services/workflow"
        ]
      }
    },
    "vg-infrastructure-deployment": {
      "shell": {
        "allowed": [
          "docker-compose build",
          "docker-compose up -d",
          "docker-compose restart",
          "docker-compose ps"
        ],
        "workingDirectories": [
          "."
        ]
      }
    },
    "vg-security-compliance": {
      "shell": {
        "allowed": [
          "npm audit --json"
        ],
        "workingDirectories": [
          "."
        ]
      }
    }
  }
}
